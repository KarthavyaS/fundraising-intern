Main JS:
// YOUR JAVASCRIPT CODE FOR INDEX.HTML GOES HERE
fetch('/api/data')
  .then(res => {
    if (!res.ok) {
      throw new Error('Network response was not ok');
    }
    return res.json();
  })
  .then(data => {
    document.getElementById('output').innerHTML = `
      <p><strong>Name:</strong> ${data.name}</p>
      <p><strong>Referral Code:</strong> ${data.referralCode}</p>
      <p><strong>Total Donations:</strong> $${data.totalDonations}</p>
    `;
  })
  .catch(error => {
    console.error('Error:', error);
    document.getElementById('output').innerText = 'Failed to load data.';
  });

